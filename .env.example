# Copy to .env and fill as needed

# OpenSky (free/anonymous by default)
# OPENSKY_USERNAME=
# OPENSKY_PASSWORD=

# OpenSky OAuth2 client credentials (recommended; required for newer accounts)
# OPENSKY_CLIENT_ID=
# OPENSKY_CLIENT_SECRET=
# OPENSKY_TOKEN_URL=https://auth.opensky-network.org/auth/realms/opensky-network/protocol/openid-connect/token

# Kafka
KAFKA_TOPIC=flight-positions
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_COMPRESSION=gzip

# API Polling
# Fast polling for interactive sessions.
# Safety belt: producer enforces MAX_REQUESTS_PER_24H (sliding 24h window).
POLL_INTERVAL_SECONDS=10
REQUEST_TIMEOUT_SECONDS=30

# Producer mode: opensky | replay
PRODUCER_MODE=opensky

# Controlled ingestion (REAL OpenSky data)
# If >0, producer will pace Kafka publishing instead of bursting each poll.
# Example: 200 means ~200 events/sec.
PUBLISH_RATE_PER_SECOND=0

# Optional: capture real produced OpenSky items to disk for later replay
CAPTURE_ENABLED=0
CAPTURE_DIR=/data/opensky_capture

# Replay captured REAL data at a controlled rate (useful under OpenSky 429)
REPLAY_DIR=/data/opensky_capture
REPLAY_MESSAGES_PER_SECOND=200
REPLAY_LOOP=1

# Optional: disable fingerprint-based dedup
DISABLE_DEDUP=0

# Sliding-window budget (override if your OpenSky plan differs)
# MAX_REQUESTS_PER_24H=100

# Optional bounding box (reduce volume)
# BBOX_MIN_LAT=
# BBOX_MAX_LAT=
# BBOX_MIN_LON=
# BBOX_MAX_LON=

# ClickHouse
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_USER=admin
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=aviation

# Grafana
GF_SECURITY_ADMIN_PASSWORD=
